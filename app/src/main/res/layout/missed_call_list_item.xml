<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="?listPreferredItemPaddingLeft"
    android:paddingLeft="?listPreferredItemPaddingLeft"
    android:paddingTop="@dimen/dim_16"
    android:paddingEnd="?listPreferredItemPaddingRight"
    android:paddingRight="?listPreferredItemPaddingRight"
    android:paddingBottom="@dimen/dim_16">

    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/dim_20"
        android:paddingLeft="@dimen/dim_20"
        android:paddingEnd="@dimen/dim_16"
        android:paddingRight="@dimen/dim_16">

        <TextView
            android:id="@+id/tvCallerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:visibility="gone"
            android:fontFamily="@font/sinkinsans600semibold"
            android:lines="1"
            android:text="Niraj Kumar"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size14" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dim_4"
            android:fontFamily="@font/sinkinsans600semibold"
            android:text="9555517491"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size14" />

        <TextView
            android:id="@+id/tvDateAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dim_4"
            android:fontFamily="@font/sinkinsanslight"
            android:text="9555517491"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size14" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dim_4"
            android:visibility="gone"
            android:fontFamily="@font/sinkinsanslight"
            android:text="9555517491"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size14" />

    </LinearLayout>


</RelativeLayout>